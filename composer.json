{
  "name": "sharkmachine/psr18-shark",
  "description": "A simple cURL PSR-18 client",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.3",
    "ext-curl": "*",

    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "nyholm/psr7": "^1.0",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpunit/phpunit": "^11.4",
    "roave/security-advisories": "dev-latest"
  },
  "suggest": {
    "nyholm/psr7": "Lightweight library for PSR-7 & PSR-17"
  },
  "autoload": {
    "psr-4": {
      "SharkMachine\\Psr18Shark\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SharkMachine\\Psr18Shark\\Testing\\": "test/"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
